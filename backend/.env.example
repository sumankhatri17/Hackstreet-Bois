# Application
APP_NAME=EduAssess API
APP_VERSION=1.0.0
DEBUG=True
API_V1_STR=/api/v1

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Database
DATABASE_URL=sqlite:///./eduassess.db
# For PostgreSQL: postgresql://user:password@localhost:5432/eduassess

# Security
SECRET_KEY=change-this-to-a-random-secret-key-min-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email (Optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
EMAILS_FROM_EMAIL=noreply@eduassess.com
EMAILS_FROM_NAME=EduAssess
